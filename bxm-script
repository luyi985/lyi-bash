export site="car"
export appKey="car-site"

export currentSite="${site}-site"
export currentSiteSrc="~/git/${currentSite}/src"
export currentSiteAuto="~/git/${currentSite}/automation"

export foodSiteSrc="~/git/${currentSite}"

alias rb="source ~/.bashrc"
alias rf="npm cache clean"
alias sub="subl -a ."
alias eb="subl ~/bxm-script"
alias k="killall node"

alias run="cd ${currentSiteSrc} && rf && APP_KEY=${appKey} APP_ENV=production APP_DEBUG=true npm run dev"
alias run-auto="cd ${currentSiteSrc} && rf && APP_KEY=${appKey} APP_ENV=sit APP_DEBUG=true APP_STUBBED=true npm run dev"
alias auto="export URL=http://localhost:3001/ && export HTTP_PROXY='' && export HTTPS_PROXY=${MY_PROXY} && export APP_KEY=${appKey}&& cd ${currentSiteAuto} && rf && npm run watch"
alias autop="export URL=http://localhost:3001/ && export HTTP_PROXY='' && export HTTPS_PROXY=${MY_PROXY} && export APP_KEY=${appKey}&& cd ${currentSiteAuto} && rf && npm run watch:phantom"


export articleSrc="~/git/wn-article/lib"
export articleDes="${currentSiteSrc}/node_modules/@bxm/article/"
alias article="rm -rf ${articleDes}/lib && mv ${articleSrc} ${articleDes}"  

export serverSrc="~/git/wn-server/lib"
export serverDes="${currentSiteSrc}/node_modules/@bxm/server/"
alias server="rm -rf ${serverDes}/lib && mv ${serverSrc} ${serverDes}"

export gallerySrc="~/git/wn-gallery/lib"
export galleryDes="${currentSiteSrc}/node_modules/@bxm/gallery/"
alias gallery="rm -rf ${galleryDes}/lib && mv ${gallerySrc} ${galleryDes}"  

export uiSrc="~/git/wn-ui/lib"
export uiDes="${currentSiteSrc}/node_modules/@bxm/ui/"
alias ui="rm -rf ${uiDes}/lib && mv ${uiSrc} ${uiDes}"  

export adSrc="~/git/wn-adverts/lib"
export adDes="${currentSiteSrc}/node_modules/@bxm/ad/"
alias ad="rm -rf ${adDes}/lib && mv ${adSrc} ${adDes}"
